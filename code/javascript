const { Client, GatewayIntentBits } = require('discord.js');
const client = new Client({ intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages, GatewayIntentBits.MessageContent] });

const TOKEN = 'YOUR_BOT_TOKEN';

client.on('messageCreate', message => {
    if (message.content.toLowerCase().startsWith('!roll')) {
        const args = message.content.split(' ');
        let sides = parseInt(args[1]) || 6; // default 6 sides
        if (sides < 1) return message.channel.send('❌ The number of sides must be at least 1!');
        const result = Math.floor(Math.random() * sides) + 1;
        message.channel.send(`🎲 You rolled a **${result}** on a ${sides}-sided dice!`);
    }
});

client.login(TOKEN);


